<body>

    <div class="sign_in_up_bg">
        <div class="container">
            <div class="row justify-content-lg-center justify-content-md-center">
                <div class="col-lg-12">
                    <div class="main_logo25" id="logo">
                        <a href="#"><img src="/curus/images/logo.svg"></a>
                        <a href="#"><img class="logo-inverse" src="/curus/images/ct_logo.svg"></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-8">
                    <div class="sign_form">
                        <h2>Welcome Back</h2>
                       @* <p>Log In to Your Edututs+ Account!</p>*@
                        <form asp-action="SignIn" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    <input class="prompt srch_explore" type="email" asp-for="Email" id="id_email" required maxlength="64" placeholder="Email Address">
                                    <i class="uil uil-envelope icon icon2"></i>
                                </div>
                               <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="ui search focus mt-15">
                                <div class="ui left icon input swdh95">
                                    <input class="prompt srch_explore" type="password" asp-for="Password" id="id_password" required maxlength="64" placeholder="Password">
                                    <i class="uil uil-key-skeleton-alt icon icon2"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="ui form mt-30 checkbox_sign">
                                <div class="inline field">
                                    <div class="ui checkbox mncheck">
                                        <input type="checkbox" asp-for="RememberMe" tabindex="0" class="hidden">
                                        <label>Remember Me</label>
                                    </div>
                                </div>
                            </div>
                            <button class="login-btn" type="submit">Sign In</button>
                        </form>
                        <p class="sgntrm145">Or <a asp-controller="Home" asp-action="ForgotPassword">Forgot Password</a>.</p>
                        <p class="mb-0 mt-30 hvsng145">Don't have an account? <a asp-controller="Home" asp-action="SignUp">Sign Up</a></p>
                    </div>
                    <div class="sign_footer"><img src="/curus/images/sign_logo.png">© 2023 <strong>ArtisanELearningSystem</strong>. All Rights Reserved.</div>
                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="/curus/js/jquery-3.3.1.min.js"></script>
    <script src="/curus/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/curus/vendor/OwlCarousel/owl.carousel.js"></script>
    <script src="/curus/vendor/semantic/semantic.min.js"></script>
    <script src="/curus/js/custom.js"></script>
    <script src="/curus/js/night-mode.js"></script>



    <script>
        $(document).ready(function () {
            initNotices();
        });

        function initNotices() {
            showNotification('@ViewBag.Message', 'success');
            showNotification('@ViewBag.Failure', 'failure');
        }

        function showNotification(message, type) {
            if (message && message.trim() !== '') {
                const iconSuccess = '<i class="fas fa-check-circle"></i>';
                const iconFailure = '<i class="fas fa-times-circle"></i>';

                Toastify({
                    text: message,
                    duration: 3000,
                    close: true,
                    gravity: 'top', // Change the position as per your preference
                    positionLeft: false,
                    backgroundColor: type === 'success' ? 'linear-gradient(to right, #00b09b, #96c93d)' : '#ff6347',
                    className: 'custom-toast',
                    stopOnFocus: true,
                    icon: type === 'success' ? iconSuccess : iconFailure,
                }).showToast();
            }
        }
    </script>

</body>

