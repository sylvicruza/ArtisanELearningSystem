@model ArtisanELearningSystem.Models.CreateCourseViewModel

@{
    ViewData["Title"] = "NewCourses";
}

@await Html.PartialAsync("_NewCoursesModal")

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="st_title">Create New Course</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form asp-controller="Course" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                <div class="tab-from-content">
                    <div class="title-icon">
                        <h3 class="title"><i class="uil uil-info-circle"></i>Basic Information</h3>
                    </div>
                    <div class="course__form">
                        <div class="general_info10">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="ui search focus mt-30 lbel25">
                                        <label>Course Title*</label>
                                        <div class="ui left icon input swdh19">
                                            <input asp-for="Title" class="prompt srch_explore" type="text" placeholder="Course title here" data-purpose="edit-course-title" maxlength="60">
                                            <div class="badge_num">60</div>
                                        </div>
                                        <div class="help-block">(Please make this a maximum of 100 characters and unique.)</div>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="ui search focus lbel25 mt-30">
                                        <label>Short Description*</label>
                                        <div class="ui form swdh30">
                                            <div class="field">
<textarea rows="3" asp-for="Description" placeholder="Item description here..."></textarea>
                                            </div>
                                        </div>
                                        <div class="help-block">220 words</div>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="ui search focus lbel25 mt-30">
                                        <label>What will students learn in your course?*</label>
                                        <div class="ui form swdh30">
                                            <div class="field">
<textarea rows="3" asp-for="LearningOutcomes"></textarea>
                                            </div>
                                        </div>
                                        <div class="help-block">Student will gain this skills, knowledge after completing this course. (One per line).</div>
                                        <span asp-validation-for="LearningOutcomes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="ui search focus lbel25 mt-30">
                                        <label>Requirements*</label>
                                        <div class="ui form swdh30">
                                            <div class="field">
<textarea rows="3" asp-for="Requirements"></textarea>
                                            </div>
                                        </div>
                                        <div class="help-block">What knowledge, technology, tools required by users to start this course. (One per line).</div>
                                        <span asp-validation-for="Requirements" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="mt-30 lbel25">
                                        <label>Course Level*</label>
                                    </div>
                                    <select asp-for="Level" class="ui hj145 dropdown cntry152 prompt srch_explore" multiple>
                                        <option value="">Select Level</option>
                                        <option value="Beginner">Beginner</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Expert">Expert</option>
                                    </select>
                                    <span asp-validation-for="Level" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 col-md-6">
                                    <div class="mt-30 lbel25">
                                        <label>Course Category*</label>
                                    </div>
                                    <select class="ui selection dropdown cntry152 prompt srch_explore optgroup" asp-for="Category">
                                        <option value="">Select</option>
                                        <optgroup label="Art & Design">
                                            <option value="Art & Painting">Art & Painting</option>
                                            <option value="Photography & Videography">Photography & Videography</option>
                                            <option value="Design & Graphics">Design & Graphics</option>
                                            <option value="Fashion & Textile Design">Fashion & Textile Design</option>
                                            <option value="Crafts & DIY">Crafts & DIY</option>
                                            <option value="Woodworking & Carpentry">Woodworking & Carpentry</option>
                                            <option value="Jewelry Making & Metalsmithing">Jewelry Making & Metalsmithing</option>
                                            <option value="Pottery & Ceramics">Pottery & Ceramics</option>
                                            <option value="Sculpture">Sculpture</option>
                                            <option value="Calligraphy">Calligraphy</option>
                                            <option value="Paper Crafts">Paper Crafts</option>
                                            <option value="Glassblowing">Glassblowing</option>
                                            <option value="Leatherworking">Leatherworking</option>
                                            <option value="Knitting & Crocheting">Knitting & Crocheting</option>
                                            <option value="Embroidery & Needlework">Embroidery & Needlework</option>
                                            <option value="Bookbinding">Bookbinding</option>
                                            <option value="Candle Making">Candle Making</option>
                                            <option value="Soap Making">Soap Making</option>
                                            <option value="Brewing & Fermentation">Brewing & Fermentation</option>
                                            <option value="Metalworking">Metalworking</option>
                                            <option value="Digital Art">Digital Art</option>
                                            <option value="Mixed Media Art">Mixed Media Art</option>
                                            <option value="Printmaking">Printmaking</option>
                                            <option value="Sewing & Tailoring">Sewing & Tailoring</option>
                                            <option value="Visual Merchandising">Visual Merchandising</option>
                                            <!-- Add more options for Art & Design -->
                                        </optgroup>
                                        <!-- Add other optgroups and options -->
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="mt-30 lbel25">
                                        <label>Course Tags*</label>
                                    </div>
                                    <select asp-for="Tags" class="ui hj145 dropdown cntry152 prompt srch_explore" multiple>
                                        <option value="">Select Tags</option>
                                        <optgroup label="Level">
                                            <option value="Beginner">Beginner</option>
                                            <option value="Intermediate">Intermediate</option>
                                            <option value="Advanced">Advanced</option>
                                        </optgroup>
                                        <optgroup label="Learning Approach">
                                            <option value="Fundamentals">Fundamentals</option>
                                            <option value="Practical Skills">Practical Skills</option>
                                            <option value="Theory">Theory</option>
                                            <option value="Hands-on Training">Hands-on Training</option>
                                            <option value="Project-based Learning">Project-based Learning</option>
                                        </optgroup>
                                        <optgroup label="Certification & Format">
                                            <option value="Certification">Certification</option>
                                            <option value="Online Course">Online Course</option>
                                            <option value="Self-Paced Learning">Self-Paced Learning</option>
                                            <option value="Live Webinars">Live Webinars</option>
                                            <option value="Video Lectures">Video Lectures</option>
                                            <option value="Quizzes & Assessments">Quizzes & Assessments</option>
                                            <option value="Interactive Lessons">Interactive Lessons</option>
                                            <option value="Gamification">Gamification</option>
                                            <option value="Collaborative Learning">Collaborative Learning</option>
                                        </optgroup>
                                        <optgroup label="Industry & Skills">
                                            <option value="Industry-specific Training">Industry-specific Training</option>
                                            <option value="Soft Skills Development">Soft Skills Development</option>
                                            <option value="Problem Solving">Problem Solving</option>
                                            <option value="Critical Thinking">Critical Thinking</option>
                                            <option value="Time Management">Time Management</option>
                                            <option value="Leadership Skills">Leadership Skills</option>
                                            <option value="Creativity & Innovation">Creativity & Innovation</option>
                                        </optgroup>
                                        <optgroup label="Technology & IT">
                                            <option value="Data Analysis">Data Analysis</option>
                                            <option value="Programming">Programming</option>
                                            <option value="Design & Art">Design & Art</option>
                                            <option value="Artificial Intelligence">Artificial Intelligence</option>
                                            <option value="Machine Learning">Machine Learning</option>
                                            <option value="Cybersecurity">Cybersecurity</option>
                                            <option value="Cloud Computing">Cloud Computing</option>
                                            <option value="Web Development">Web Development</option>
                                            <option value="Mobile App Development">Mobile App Development</option>
                                            <option value="Graphic Design">Graphic Design</option>
                                            <option value="Video Editing">Video Editing</option>
                                            <option value="Photography">Photography</option>
                                        </optgroup>
                                        <optgroup label="Business & Career">
                                            <option value="Marketing & Sales">Marketing & Sales</option>
                                            <option value="Finance & Accounting">Finance & Accounting</option>
                                            <option value="Project Management">Project Management</option>
                                            <option value="Human Resources">Human Resources</option>
                                            <option value="Customer Service">Customer Service</option>
                                            <option value="Teaching & Education">Teaching & Education</option>
                                        </optgroup>
                                        <optgroup label="Science & Engineering">
                                            <option value="Science & Engineering">Science & Engineering</option>
                                        </optgroup>
                                    </select>
                                    <span asp-validation-for="Tags" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 col-md-6">
                                    <div class="mt-30 lbel25">
                                        <label>Course Poster*</label>
                                    </div>
                                    <div class="ui left icon input swdh19">
                                        <input asp-for="File" class="prompt srch_explore" type="file" >
                                       
                                    </div>
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 col-md-6">
                                    <div class="mt-30 lbel25">
                                        <label>Course Category*</label>
                                    </div>
                                    <div class="ui left icon input swdh19">
                                        <input asp-for="Badge" class="prompt srch_explore" type="text" placeholder="Enter bagde for course">
                                       
                                    </div>
                                    <span asp-validation-for="Badge" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-from-content">
                    <div class="title-icon">
                        <h3 class="title"><i class="uil uil-usd-square"></i>Price</h3>
                    </div>
                    <div class="course__form">
                        <div class="price-block">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="course-main-tabs">
                                        <div class="nav nav-pills flex-column flex-sm-row nav-tabs" role="tablist">
                                            <a class="flex-sm-fill text-sm-center nav-link active" data-toggle="tab" href="#nav-free" role="tab" aria-selected="true"><i class="fas fa-tag mr-2"></i>Free</a>
                                            <a class="flex-sm-fill text-sm-center nav-link" data-toggle="tab" href="#nav-paid" role="tab" aria-selected="false"><i class="fas fa-cart-arrow-down mr-2"></i>Paid</a>
                                        </div>
                                        <div class="tab-content">
                                            <div class="tab-pane fade show active" id="nav-free" role="tabpanel">
                                                <div class="price-require-dt">
                                                    <div class="cogs-toggle center_d">
                                                        <label class="switch">
                                                            <input asp-for="IsLoginRequired" type="checkbox" >
                                                            <span asp-validation-for="IsLoginRequired" class="text-danger"></span>
                                                        </label>
                                                        <label for="require_login" class="lbl-quiz">Require Log In</label>
                                                    </div>
                                                    <div class="cogs-toggle center_d mt-3">
                                                        <label class="switch">
                                                            <input type="checkbox" id="require_enroll">
                                                            <span></span>
                                                        </label>
                                                        <label for="require_enroll" class="lbl-quiz">Require Enroll</label>
                                                    </div>
                                                    <p>If the course is free, if student require to enroll your course, if not required enroll, if students required sign in to your website to take this course.</p>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="nav-paid" role="tabpanel">
                                                <div class="license_pricing mt-30">
                                                    <label class="label25">Regular Price*</label>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-6 col-sm-6">
                                                            <div class="loc_group">
                                                                <div class="ui left icon input swdh19">
                                                                    <input asp-for="Price" class="prompt srch_explore" type="text" placeholder="$0">
                                                                </div>
                                                                <span class="slry-dt">USD</span>
                                                                <span asp-validation-for="Price" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="license_pricing mt-30 mb-30">
                                                    <label class="label25">Discount Price*</label>
                                                    <div class="row">
                                                        <div class="col-lg-4 col-md-6 col-sm-6">
                                                            <div class="loc_group">
                                                                <div class="ui left icon input swdh19">
                                                                    <input asp-for="Discount" class="prompt srch_explore" type="text" placeholder="$0">
                                                                </div>
                                                                <span class="slry-dt">USD</span>
                                                                <span asp-validation-for="Discount" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-from-content">
                    <div class="title-icon">
                        <button class="btn btn-default steps_btn"><i class="uil uil-upload"></i>Submit for Review</button>
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
